{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ESNext",
    "strict": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "outDir": "bin/",
    "strict": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
